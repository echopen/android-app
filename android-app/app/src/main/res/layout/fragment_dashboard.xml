<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echopen.asso.echopen.fragments.DashboardFragment">

    <include layout="@layout/header"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:background="@drawable/dashboard_bottom"
        android:orientation="vertical"
        android:layout_marginTop="370dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="258dp"
        android:id="@+id/relativeLayout2">

        <Button
            android:id="@+id/quick_scan"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"
            android:background="@drawable/dashboard_button"
            android:text="Quick scan"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/custom_scan"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/quick_scan"
            android:layout_below="@+id/quick_scan"
            android:layout_marginTop="20dp"
            android:background="@drawable/dashboard_button"
            android:text="Custom scan"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/gallery"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/custom_scan"
            android:layout_below="@+id/custom_scan"
            android:layout_marginTop="20dp"
            android:background="@drawable/dashboard_button"
            android:text="Gallery"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/help"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/custom_scan"
            android:layout_alignTop="@+id/gallery"
            android:background="@drawable/dashboard_button"
            android:text="Help"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/relativeLayout3">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            app:srcCompat="@drawable/ic_check_black_24px"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your device is ready, start a scan"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="97dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_fast_forward_black_24px"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_toStartOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_settings_overscan_black_24px"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="-12dp"
        app:srcCompat="@drawable/ic_list_black_24px"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/imageView6"
        />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="150dp"
        app:srcCompat="@drawable/ic_help_outline_black_24px"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/imageView6"
        />

    <include layout="@layout/modal_login"/>

</RelativeLayout>
