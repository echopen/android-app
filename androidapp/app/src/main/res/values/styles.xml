<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <style name="custom_switch" >
        <item name="android:textStyle">bold</item> 
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
    </style>
    <style name="lbl_slide" parent="android:Widget.Holo.Light.TextView">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>
    <style name="tab_btn" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="divider_blue">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="lbl_setting" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/gray_very_light</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@color/gray_dk</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="text_setting" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="search_box" parent="android:Widget.Holo.Light.EditText">
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="them_btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="btn_like" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableLeft">@drawable/ic_heart_white</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>
